# Rename this file to .env and fill in the values

SITE_NAME=ManagementScholarSearch
DOMAIN_NAME=managementscholarsearch.com
PUBLIC_BASE_URL=http://localhost:8000
REGIONS=North America,Europe,Asia,Global
TIMEZONE=Europe/Vienna

# Local database path (used by generate_site.py)
DB_PATH=./data/mss.sqlite

# Keys you already created
OPENAI_API_KEY=sk-...
EMAIL_API_KEY=...
ADSENSE_CLIENT_ID=ca-pub-...
ADSENSE_AD_SLOT=1234567890

# (Static site) Optional: link to your hosted MailerLite signup form
MAILERLITE_FORM_URL=

# Generator tuning (optional)
LIMIT_PER_SOURCE=40
MAX_ITEMS=500
NEWSLETTER_ITEMS=60

# Newsletter schedule (THU = Thursday)
NEWSLETTER_DAY=THU
NEWSLETTER_HOUR=09
NEWSLETTER_MINUTE=00
